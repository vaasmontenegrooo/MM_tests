<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MM</name>
    <description>
        Mastermind test application
    </description>
    <author>
        Mateusz Burnetko
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
    
    <platform name="android">

        <splash src="res/screen/android/drawable-hdpi/splash.png" density="port-hdpi"/>
        <splash src="res/screen/android/drawable-mdpi/splash.png" density="port-mdpi"/>
        <splash src="res/screen/android/drawable-xhdpi/splash.png" density="port-xhdpi"/>
        <splash src="res/screen/android/drawable-xxhdpi/splash.png" density="port-xxhdpi"/>
        <splash src="res/screen/android/drawable-xxxhdpi/splash.png" density="port-xxxhdpi"/>
    </platform>
    
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenDelay" value="4000" />
</widget>
